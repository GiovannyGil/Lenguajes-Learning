---
// imports
import PythonIcon from "./icons/Python.astro";
import JavaScriptIcon from "./icons/JS.astro";
import TailwindCSSIcon from "./icons/Tailwind.astro";
import DjangoIcon from "./icons/Django.astro";
import SQLIcon from "./icons/SQL.astro";

// list of tags
const TAGS = {
    Python: {
        name: "Python",
        class: "bg-blue-500 text-black font-semibold",
        icon: PythonIcon,
    },
    JavaScript: {
        name: "JavaScript",
        class: "bg-yellow-500 text-black font-semibold",
        icon: JavaScriptIcon,
    },
    TailwindCSS: {
        name: "TailwindCSS",
        class: "bg-blue-500 text-black font-semibold",
        icon: TailwindCSSIcon,
    },
    Django: {
        name: "Django",
        class: "bg-green-500 text-black font-semibold",
        icon: DjangoIcon,
    },
    SQL: {
        name: "SQL",
        class: "bg-blue-500 text-black font-semibold",
        icon: SQLIcon,
    },
}

// list of projects
const PROJECTS = [
    {
        title: "Face Recognition",
        description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
        image: "../../public/projects/img.webp",
        link: "https://github.com/GiovannyGil",
        github: "https://github.com/GiovannyGil",
        tags: [TAGS.Python, TAGS.JavaScript, TAGS.TailwindCSS, TAGS.Django, TAGS.SQL]

    },
]
---


{
    PROJECTS.map(({title, description, tags, image}) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row">
                {tags.map((tag) =>(
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-4" />{tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img class="rounded shadow-2xl shadow-white/10 size-[450px] mt-2" src={image} alt={`Screenshot of the Project ${image}`} />
        </article>
    ))
}